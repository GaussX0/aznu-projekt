<wsdl:definitions xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
                  xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
                  xmlns:tns="http://wsdl.languageverifier.aznu.org/"
                  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
                  name="LanguageService"
                  targetNamespace="http://wsdl.languageverifier.aznu.org/">

    <wsdl:types>
        <xsd:schema>
            <xsd:import namespace="http://wsdl.languageverifier.aznu.org/" schemaLocation="languages.xsd"/>
        </xsd:schema>
    </wsdl:types>

    <wsdl:message name="checkLanguageRequestMsg">
        <wsdl:part element="tns:LanguageRequest" name="parameters"/>
    </wsdl:message>
    <wsdl:message name="checkLanguageResponseMsg">
        <wsdl:part element="tns:LanguageResponse" name="parameters"/>
    </wsdl:message>

    <wsdl:portType name="LanguagePort">
        <wsdl:operation name="checkLanguage">
            <wsdl:input message="tns:checkLanguageRequestMsg"/>
            <wsdl:output message="tns:checkLanguageResponseMsg"/>
        </wsdl:operation>
    </wsdl:portType>

    <wsdl:binding name="LanguageBinding" type="tns:LanguagePort">
        <soap:binding style="document" transport="http://schemas.xmlsoap.org/soap/http"/>
        <wsdl:operation name="checkLanguage">
            <soap:operation soapAction=""/>
            <wsdl:input><soap:body use="literal"/></wsdl:input>
            <wsdl:output><soap:body use="literal"/></wsdl:output>
        </wsdl:operation>
    </wsdl:binding>

    <wsdl:service name="LanguageService">
        <wsdl:port binding="tns:LanguageBinding" name="LanguagePort">
            <soap:address location="http://localhost:8080/soap-api/service/languages"/>
        </wsdl:port>
    </wsdl:service>
</wsdl:definitions>